{
  "plugins": [
    "react"
  ],

  "parserOptions": {
    "ecmaVersion": 6,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true
    }
  },

  "settings": {
    "react": {
      "pragma": "React",
      "version": "15.5.4"
    }
  },

  "extends": ["eslint:recommended", "plugin:react/recommended"],

  "env": {
    "browser": true,
    "node": true
  }
}
